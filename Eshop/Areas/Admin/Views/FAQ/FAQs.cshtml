@using Eshop.Common
@model Domain.ViewModels.FAQ.FilterFaqViewModel

   <div style="margin: 20px" class="row ">
        <form id="indexForm">
            <input type="hidden" asp-for="Page" id="page" />
            <div class="col-xs-12 col-md-12">
                <div style="margin-top: 80px" class="widget">
                    <div class="widget-header bordered-bottom bordered-yellow">
                        <span class="widget-caption">لیست کالا سایت</span>
                        <div class="widget-buttons">
                            <a href="#" data-toggle="maximize">
                                <i class="fa fa-expand"></i>
                            </a>
                            <a href="#" data-toggle="collapse">
                                <i class="fa fa-minus"></i>
                            </a>
                            <a href="#" data-toggle="dispose">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="widget-body no-padding">
                        <div id="searchable_wrapper" class="dataTables_wrapper form-inline">


                            <div id="searchable_filter" class="dataTables_filter">
                                <label>
                                    <input type="search" asp-for="Question" class="form-control input-lg" placeholder="جست و جو بر اساس سوال" aria-controls="searchable">
                                </label>
                                <label>
                                    <input type="search" asp-for="Answer" class="form-control input-lg" placeholder="جست و جو بر اساس حواب ها" aria-controls="searchable">
                                </label>
                                <input type="submit" class="btn btn-darkorange btn-lg shiny btn-label fa fa-search" value="جست و جو">
     

                            </div>

                            <div id="searchable_filter" class="dataTables_filter">

                                <a style="margin: 10px" href="/Admin/AddFaq" class="btn btn-darkorange shiny btn-label">افزودن سوال</a>

                            </div>

                            <table style="margin-left: 20px" class="table table-bordered table-hover table-striped dataTable" id="searchable" role="grid" aria-describedby="searchable_info">
                                <thead class="bordered-darkorange">
                                    <tr role="row">
                                        <th class="sorting" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-label="Rendering engine: activate to sort column ascending" style="width: 233px;">عنوان پرسش</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Browser: activate to sort column descending" style="width: 233px;">پاسخ</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="searchable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Browser: activate to sort column descending" style="width: 233px;">دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.Entities)
                                {

                                    <tr role="row" class="odd">
                                        <td class=" sorting_1">@item.Question</td>
                                        <td class="sorting_1">@item.Answer</td>

                                        <td class="center ">
                                            <Authrize permission-id="@Permissions.Admin">
                                                <a href="/Admin/DeleteFaq/@item.Id" class="btn btn-danger shiny btn-sm">حذف</a>
                                            </Authrize>
                                            <Authrize permission-id="@Permissions.Admin">
                                                <a href="/Admin/EditFaq/@item.Id" class="btn btn-info btn-sm shiny">ویرایش</a>
                                            </Authrize>
                     
                                        </td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <div class="row DTTTFooter">
                            <div class="col-sm-6">
                                <div class="dataTables_info" id="searchable_info" role="status" aria-live="polite">Showing 1 to 10 of 10 entries</div>
                            </div>
                            <partial name="_Paging" model="@Model.GetCurrentPaging()" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



@section Section
    {
    <script>
        function OnClick(pageId) {
            $("#page").val(pageId)
            $("#indexForm").submit();

        }
    </script>
    }