@using Application.Convertor
@model Domain.ViewModels.Log.FilterUserLogViewModel

<div class="col-xs-12 col-md-6">
    <div class="well with-header  with-footer">
        <div class="header bg-darkorange">
            لیست آخرین فعالیت ادمین ها
        </div>
        <table class="table table-hover table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>
                        کاربر
                    </th>
                    <th>
                        فعالیت
                    </th>
                    <th>
                        زمان
                    </th>
             
                </tr>
            </thead>
            <tbody>
               @foreach (var order in Model.Entities)
               {
                   <tr>
                       <td>
                           @order.User.Email
                       </td>
                       <td>
                           @order.Desctiption
                       </td>
                       <td>
                           @order.CreatDate.ToShamsi()
                       </td>
                       
                   </tr>
               }
             
            </tbody>
        </table>

       
    </div>
</div>
