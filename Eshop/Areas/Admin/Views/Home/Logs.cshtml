@using Application.Convertor
@model Domain.ViewModels.Log.FilterUserLogViewModel

<form id="indexForm">
    <div class="row">
        <div style="margin-top: 110px" class="col-xs-12 col-md-12">
            <div class="widget">
                <div class="widget-header ">
                    <span class="widget-caption">Simple DataTable</span>
                    <div class="widget-buttons">
                        <a href="#" data-toggle="maximize">
                            <i class="fa fa-expand"></i>
                        </a>
                        <a href="#" data-toggle="collapse">
                            <i class="fa fa-minus"></i>
                        </a>
                        <a href="#" data-toggle="dispose">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="widget-body">
                    <div id="simpledatatable_wrapper" class="dataTables_wrapper form-inline no-footer">
                       
                        <div id="simpledatatable_filter" class="dataTables_filter"><label>
                            <input type="text" asp-for="UserName" class="form-control input-sm" placeholder="ایمیل" aria-controls="simpledatatable">
                            <input type="text" asp-for="Activity" class="form-control input-sm" placeholder="فعالیت" aria-controls="simpledatatable">
                        <button type="submit" class="btn btn-maroon">جست و جو</button>
                        </label></div>
                      
                       
                        
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="simpledatatable" role="grid" aria-describedby="simpledatatable_info" style="width: 1231px;">
                            <thead>
                            <tr role="row">

                                <th class="sorting" tabindex="0" aria-controls="simpledatatable" rowspan="1" colspan="1" aria-label="
                                                    Username
                                                : activate to sort column ascending" style="width: 237px;">
                                    ایمیل
                                </th>
                                <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="
                                                    Email
                                                " style="width: 451px;">
                                    فعالیت
                                </th>
                                <th class="sorting" tabindex="0" aria-controls="simpledatatable" rowspan="1" colspan="1" aria-label="
                                                    Points
                                                : activate to sort column ascending" style="width: 160px;">
                                    تاریخ
                                </th>

                                <th class="sorting" tabindex="0" aria-controls="simpledatatable" rowspan="1" colspan="1" aria-label="
                                                    Points
                                                : activate to sort column ascending" style="width: 160px;">
                                    آیدی مورد فعالیت شده
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.Entities)
                            {

                                <tr role="row" class="odd">
                                    <td>
                                        @item.User.Email
                                    </td>
                                    <td>
                                        @item.Desctiption
                                    </td>
                                    <td>
                                        @item.CreatDate
                                    </td>
                                    <td>
                                        @item.EntityId
                                    </td>
                                      
                                </tr>

                            }
                            </tbody>
                        </table>
                        <partial name="_Paging" model="@Model.GetCurrentPaging()" />
                    </div>
                </div>
            </div>
         
        </div>
    </div>

</form>

@section Section
{
<script>
    function OnClick(pageId) {
        $("#page").val(pageId)
        $("#indexForm").submit();

    }
</script>
}